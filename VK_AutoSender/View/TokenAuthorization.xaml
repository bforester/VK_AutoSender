<Window x:Class="VK_AutoSender.View.TokenAuthorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VK_AutoSender.View"
        Icon="../Resources/icon.ico"
        mc:Ignorable="d"
        x:Name="AuthToken"
        Title="Sign in token" Height="450" Width="300" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0, 50, 0, 0">
        <TextBlock TextWrapping="Wrap" Text="Token" HorizontalAlignment="Center" FontSize="20"/>
        <TextBox x:Name="token_TextBox" HorizontalAlignment="Center" TextWrapping="Wrap" Width="203" Height="177" VerticalContentAlignment="Top" FontSize="14" Focusable="True" Background="{x:Null}" BorderBrush="#FF707070"/>

        <Button Content="Sign in" Height="34" FontSize="15" Margin="0, 30, 0, 0" Background="#FF5B94CC" Click="AuthVerify" BorderBrush="#FF707070"/>
        <Button Content="Back" Height="26" FontSize="15" Margin="0, 30, 0, 0" Background="#FF44DEAA" Click="GoingBack" Width="78"/>
    </StackPanel>
</Window>
